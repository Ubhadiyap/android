<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alchemistdigital.kissan">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/login" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".activities.Create_Enquiry" />
        <activity android:name=".activities.Create_Order" />
        <activity android:name=".activities.Create_Society" />
        <activity android:name=".activities.Create_OBP" />
        <activity
            android:name=".activities.AdminPanel"
            android:label="@string/title_activity_admin_panel"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".activities.scannerActivity" />
        <activity android:name=".activities.View_Enquiry" />
        <activity android:name=".activities.Enquiry_Detail"></activity>
    </application>

</manifest>
