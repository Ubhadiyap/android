<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicInfo_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

            <TextView
                android:id="@+id/id_hint_ref"
                android:text="@string/hint_ref_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_id_order_details_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mdtp_done_text_color"
                android:layout_below="@+id/id_hint_ref"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/id_hint_utr"
                android:text="@string/utrNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_id_order_details_reference"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_id_order_details_utr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mdtp_done_text_color"
                android:layout_below="@+id/id_hint_utr"
                android:textSize="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>