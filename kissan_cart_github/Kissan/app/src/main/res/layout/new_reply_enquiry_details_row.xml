<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/basicInfo_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/id_RL_enquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_id_newReply_eRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_id_newReply_eSociety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_id_newReply_eRef"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_id_newReply_eMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_id_newReply_eSociety"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_id_newReply_eMessage">

                <TextView
                    android:id="@+id/tv_id_view_enquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/view"
                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_id_new_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/reply"
                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>