<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:id="@+id/id_xmlSplashScreen"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/id_buxaLogo_splashscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/buxa_logo"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/id_loading_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <com.alchemistdigital.buxa.utilities.SegoeRegularFontCustomTextview
                android:id="@+id/id_loadintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_loading"
                android:textSize="25sp" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avloadingIndicatorView"
                android:layout_width="30sp"
                android:layout_height="60sp"
                android:layout_marginLeft="8sp"
                android:visibility="visible"
                app:indicator="BallPulse"
                app:indicator_color="#6c6f6f"
            />
        </LinearLayout>


</RelativeLayout>
