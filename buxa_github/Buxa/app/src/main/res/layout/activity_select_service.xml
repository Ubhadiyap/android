<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    tools:context=".activities.SelectServiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_tv_strSelectService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/backgroundColor"
                android:text="@string/strSelectService"
                android:textSize="45sp" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/strWantAvail"
                android:textColor="@color/backgroundColor"
                android:textSize="18dp"
                app:Segoe="segoe_light" />

            <LinearLayout
                android:id="@+id/layoutServiceCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <!--<CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_id_trans"
                    android:paddingLeft="20dp"
                    android:textSize="25dp"
                    android:textColor="@color/backgroundColor"
                    android:buttonTint="@color/backgroundColor"
                    android:text="@string/strTransportation" />-->
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/milkyWhite"
                app:rippleColor="@color/milkyWhite"
                android:src="@drawable/ic_keyboard_arrow_right"
                android:onClick="gotoSelectServiceParameter" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
